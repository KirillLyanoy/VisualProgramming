<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:con="using:dz13.Control">

	<Design.PreviewWith>
		<con:GateList />
	</Design.PreviewWith>

	<Style Selector="con|GateList">
		<Setter Property="Template">
			<ControlTemplate>
				<Grid RowDefinitions="40, *" Background="Coral">
					<WrapPanel Grid.Row="0" >
						<RadioButton Name="RadioButton1" GroupName="main" Content="ГОСТ" Margin="20 4 0 0"/>
						<RadioButton Name="RadioButton2" GroupName="main" Content="ANSI" Margin="20 4 0 0"/>
					</WrapPanel>
					<ListBox Grid.Row="1" ItemsSource="{TemplateBinding Items}" Background="LightSalmon"/>
				</Grid>
			</ControlTemplate>
		</Setter>
	</Style>

</Styles>