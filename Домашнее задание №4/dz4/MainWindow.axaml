<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:dz4"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="dz4.MainWindow"
		xmlns:k="using:System.IO"
        Title="dz4"
        x:DataType="local:DataContextWithCollection">
	<Window.DataContext>
		<local:DataContextWithCollection/>
	</Window.DataContext>

	<Window.DataTemplates>
		<DataTemplate DataType="{x:Type k:FileInfo}">
			<Grid ColumnDefinitions="*, 20*">
				<Image Grid.Column="0" Source="/Assets/file.png" Width="20"/>
				<TextBlock Grid.Column="1" Text="{Binding }"/>
			</Grid>
		</DataTemplate>		
		<DataTemplate DataType="{x:Type k:DirectoryInfo}">
			<Grid ColumnDefinitions="*, 20*">
				<Image Grid.Column="0" Source="/Assets/folder.png" Width="20"/>
				<TextBlock Grid.Column="1" Text="{Binding }"/>
			</Grid>
		</DataTemplate>
	</Window.DataTemplates>

	
	<ListBox Name="MainListBox" 
			 ItemsSource="{Binding Collection}" 
			 DoubleTapped="ListBox_DoubleTapped" />		

</Window>
